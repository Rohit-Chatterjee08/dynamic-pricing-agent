{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": ".",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": [
    "*.ts",
    "lib/**/*.ts",
    "scripts/**/*.ts",
    "shopify.server.ts",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}

